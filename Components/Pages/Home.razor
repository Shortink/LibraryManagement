@page "/Home"
@using LibraryManagement.Data

<div class="home-container" style="background-image: url('https://files.oaiusercontent.com/file-HiT6ERbCcF1acf5FXjPG7A?se=2024-12-07T23%3A40%3A21Z&sp=r&sv=2024-08-04&sr=b&rscc=max-age%3D604800%2C%20immutable%2C%20private&rscd=attachment%3B%20filename%3D3682e42d-f09f-4943-970e-01e653065519.webp&sig=/Dd0Uq0lxK8LpNUKvAXPin4J%2Bg3H0vBKKefBHo4oZpc%3D'); background-size: cover; background-position: center; min-height: 100vh; color: white;">
    <div class="content">
        <h1 class="title">Library Management System</h1>
        <p class="description">
            Manage your books, members, and reservations seamlessly in our system.
        </p>

    </div>
</div>

<h2>Book List</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ISBN</th>
            <th>Title</th>
            <th>Author</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in books)
        {
            <tr>
                <td>@book.Isbn</td>
                <td>@book.Title</td>
                <td>@book.AuthorName</td>
                <td>@book.Genre</td>
            </tr>
        }
    </tbody>
</table>




@code {
    static DbManager db = new DbManager();
    List<Book> books = db.GetBooks();
}
