@inherits LayoutComponentBase

<div class="main-layout">
    <header class="navbar">
        <div class="navbar-brand">
            <a href="/" class="brand">Library Management</a>
        </div>
        <nav class="navbar-links">
            <NavLink href="/Home" Match="NavLinkMatch.All" class="nav-link" active-class="active">Home</NavLink>
            <NavLink href="/" Match="NavLinkMatch.All" class="nav-link" active-class="active">Add Book</NavLink>
            <NavLink href="/Borrow/Return" Match="NavLinkMatch.All" class="nav-link" active-class="active">Borrow/Return</NavLink>
            <NavLink href="/Reservation" class="nav-link" active-class="active">Reservation</NavLink>
            <NavLink href="/Setting" class="nav-link" active-class="active">Setting</NavLink>
        </nav>
    </header>
    <main class="content">
        @Body
    </main>
</div>

<style>

    .main-layout {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background: linear-gradient(to bottom, #1e1e1e, #2a2a2a);
        color: #e0e0e0;
    }

    .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #2c2c2c;
        color: white;
        padding: 10px 20px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.5);
    }

    .navbar-brand .brand {
        font-size: 24px;
        font-weight: bold;
        color: #ffffff;
        text-decoration: none;
    }

    .navbar-links {
        display: flex;
        gap: 15px;
    }

    .nav-link {
        color: #a0a0a0;
        text-decoration: none;
        font-size: 16px;
        padding: 5px 10px;
        border-radius: 4px;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

        .nav-link:hover {
            background-color: #444;
            color: white;
        }

        .nav-link.active {
            color: white;
            background-color: #007bff;
        }

    .content {
        padding: 20px;
        background-color: #2c2c2c;
        border-radius: 10px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.5);
    }

    /* Responsive navbar for smaller screens */
    @@media (max-width: 768px) {
        .navbar {
            flex-direction: column;
            align-items: flex-start;
        }

        .navbar-links {
            flex-direction: column;
            gap: 10px;
            margin-top: 10px;
        }
    }
</style>
